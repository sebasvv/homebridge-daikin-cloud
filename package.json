{
    "displayName": "Daikin Cloud",
    "platformname": "daikincloud",
    "name": "@sebasvv/homebridge-daikin-cloud",
    "version": "3.0.2",
    "description": "Integrate with the Daikin Cloud to control your Daikin air conditioning via the cloud",
    "license": "Apache-2.0",
    "repository": "github:sebasvv/homebridge-daikin-cloud",
    "bugs": {
        "url": "https://github.com/sebasvv/homebridge-daikin-cloud/issues"
    },
    "engines": {
        "node": ">=18.15.0",
        "homebridge": ">=1.5.0 || ^2.0.0-beta.0"
    },
    "main": "dist/src/index.js",
    "files": [
        "dist",
        "LICENSE",
        "README.md",
        "config.schema.json"
    ],
    "scripts": {
        "test": "jest",
        "test:updateSnapshots": "jest test/* --updateSnapshot",
        "lint": "eslint src/**.ts --max-warnings=0",
        "watch": "npm run build && npm link && nodemon",
        "build": "rimraf ./dist && tsc",
        "prepack": "npm run build",
        "release": "npm run verify && standard-version",
        "release:minor": "npm run verify && standard-version --release-as minor",
        "release:patch": "npm run verify && standard-version --release-as patch",
        "release:major": "npm run verify && standard-version --release-as major",
        "prepare": "husky",
        "verify": "npm run lint && npm run build && npm test"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx,js,jsx}": [
            "prettier --write",
            "eslint --max-warnings=0"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    },
    "keywords": [
        "homebridge-plugin"
    ],
    "overrides": {
        "node-forge": "1.3.1",
        "ip": "2.0.1",
        "cross-spawn": "7.0.6"
    },
    "dependencies": {
        "daikin-controller-cloud": "2.4.3",
        "zod": "^4.3.4"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^20.17.10",
        "@typescript-eslint/eslint-plugin": "^8.51.0",
        "@typescript-eslint/parser": "^8.51.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "hap-nodejs": "^1.2.0",
        "homebridge": "^1.11.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^16.2.7",
        "nodemon": "^3.1.9",
        "prettier": "^3.7.4",
        "rimraf": "^6.0.1",
        "standard-version": "^9.5.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.51.0"
    }
}
