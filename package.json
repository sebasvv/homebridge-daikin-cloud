{
  "displayName": "Daikin Cloud",
  "platformname": "daikincloud",
  "name": "homebridge-daikin-cloud",
  "version": "2.9.0",
  "description": "Integrate with the Daikin Cloud to control your Daikin air conditioning via the cloud",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/jeroenvdb/homebridge-daikin-cloud.git"
  },
  "bugs": {
    "url": "https://github.com/jeroenvdb/homebridge-daikin-cloud/issues"
  },
  "engines": {
    "node": ">=18.15.0",
    "homebridge": ">=1.5.0 || ^2.0.0-beta.0"
  },
  "main": "dist/src/index.js",
  "scripts": {
    "test": "jest",
    "test:updateSnapshots": "jest test/* --updateSnapshot",
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "release": "npm publish",
    "release:beta": "npm publish --tag beta"
  },
  "keywords": [
    "homebridge-plugin"
  ],
  "overrides": {
    "node-forge": "1.3.1",
    "ip": "2.0.1",
    "cross-spawn": "7.0.6"
  },
  "dependencies": {
    "daikin-controller-cloud": "2.4.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.10",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "hap-nodejs": "^1.2.0",
    "homebridge": "^1.11.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.51.0"
  },
  "funding": [
    {
      "type": "paypal",
      "url": "https://www.paypal.me/jrnvdb"
    }
  ]
}
